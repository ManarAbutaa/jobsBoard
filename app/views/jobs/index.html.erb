
<% if user_signed_in? %>
<h1>Jobs</h1>

<div id="jobs">
  <% @jobs.each do |job| %>
    <%= render job %>
    <p>
      <%= link_to "Show this job", job, class:"btn btn-secondary" %>
    </p>
  <% end %>
</div>

<%= link_to "New job", new_job_path, class:"btn btn-secondary" %>

<% else %>

<h1>Hello !!</h1>
You must sign in to show the job board ...

<% end %>


